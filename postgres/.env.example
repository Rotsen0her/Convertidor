POSTGRES_PASSWORD=TU_CLAVE_SEGURA_ROOT_DE_POSTGRES

# Configuración para análisis de datos (1M+ registros)
POSTGRES_DB=analytics
POSTGRES_USER=postgres

# Performance tuning para grandes datasets
# Ajusta según la RAM disponible de tu servidor
POSTGRES_SHARED_BUFFERS=256MB        # ~25% de RAM disponible
POSTGRES_WORK_MEM=16MB               # Por query/sort operation
POSTGRES_MAINTENANCE_WORK_MEM=64MB   # Para VACUUM, CREATE INDEX
POSTGRES_EFFECTIVE_CACHE_SIZE=512MB  # ~50% de RAM total